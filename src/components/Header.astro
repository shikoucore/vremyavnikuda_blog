---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-[var(--color-bg-primary)]/80 backdrop-blur-sm border-b border-[var(--color-border)]">
  <nav class="max-w-4xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold hover:text-primary-400 transition-colors">
        vremyavnikuda
      </a>
      
      <ul class="flex gap-6">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'hover:text-primary-400 transition-colors',
                currentPath === href && 'text-primary-400 font-medium'
              ]}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
