---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={`${t('privacy.title')} - vremyavnikuda`} description={t('site.description')}>
  <div class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">{t('privacy.title')}</h1>
    
    <div class="prose prose-lg max-w-none space-y-6">
      <p class="text-[var(--color-text-secondary)]">
        {t('privacy.lastUpdated')}: {new Date().toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('privacy.overview')}</h2>
        <p>
          {t('privacy.overviewText')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('privacy.analytics')}</h2>
        <p>
          {t('privacy.analyticsText')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('privacy.thirdParty')}</h2>
        <p>
          {t('privacy.thirdPartyText')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('privacy.rights')}</h2>
        <p>
          {t('privacy.rightsText1')}
          <a href="https://github.com/vremyavnikuda" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:underline">GitHub</a>
          {t('privacy.rightsText2')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('privacy.changes')}</h2>
        <p>
          {t('privacy.changesText')}
        </p>
      </section>
    </div>
  </div>
</BaseLayout>
