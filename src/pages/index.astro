---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const allPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft && post.data.lang === lang)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout>
  <div class="max-w-4xl mx-auto px-4 py-16">
    <section class="mb-24">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        {t('home.greeting')}
      </h1>
      <p class="text-xl text-[var(--color-text-secondary)] mb-8 max-w-2xl">
        {t('home.intro')}
      </p>
      <div class="flex gap-4">
        <a 
          href={getLocalizedPath('/blog', lang)}
          class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
        >
          {t('home.readBlog')}
        </a>
        <a 
          href={getLocalizedPath('/projects', lang)}
          class="px-6 py-3 border border-[var(--color-border)] rounded-lg hover:bg-[var(--color-bg-secondary)] transition-colors"
        >
          {t('home.viewProjects')}
        </a>
      </div>
    </section>

    {allPosts.length > 0 && (
      <section>
        <h2 class="text-3xl font-bold mb-8">{t('home.latestPosts')}</h2>
        <div class="space-y-8">
          {allPosts.map((post) => (
            <article class="group">
              <a href={getLocalizedPath(`/blog/${post.slug}`, lang)} class="block">
                <time class="text-sm text-[var(--color-text-secondary)]">
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <h3 class="text-2xl font-semibold mt-2 mb-3 group-hover:text-primary-400 transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-[var(--color-text-secondary)]">
                  {post.data.description}
                </p>
                {post.data.tags.length > 0 && (
                  <div class="flex gap-2 mt-3">
                    {post.data.tags.map((tag) => (
                      <span class="text-xs px-2 py-1 bg-[var(--color-bg-secondary)] rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            </article>
          ))}
        </div>
        <div class="mt-12">
          <a 
            href={getLocalizedPath('/blog', lang)}
            class="inline-flex items-center text-primary-400 hover:underline"
          >
            {t('home.viewAllPosts')}
          </a>
        </div>
      </section>
    )}
  </div>
</BaseLayout>
