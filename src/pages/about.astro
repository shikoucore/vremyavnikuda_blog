---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={`${t('about.title')} - vremyavnikuda`} description={t('site.description')}>
  <div class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">{t('about.title')}</h1>
    
    <div class="prose prose-lg max-w-none space-y-6">
      <p class="text-xl text-[var(--color-text-secondary)]">
        {t('about.intro')}
      </p>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('about.whatIDo')}</h2>
        <p>
          {t('about.whatIDoText')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('about.techStack')}</h2>
        <p>
          {t('about.techStackText')}
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">{t('about.contact')}</h2>
        <p>
          {t('about.contactText1')} <a href="https://github.com/vremyavnikuda" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:underline">{t('about.github')}</a>
        </p>
      </section>
    </div>
  </div>
</BaseLayout>
