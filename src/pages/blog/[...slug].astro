---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter(post => !post.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: post,
    }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout 
  title={`${post.data.title} - vremyavnikuda`}
  description={post.data.description}
>
  <article class="max-w-3xl mx-auto px-4 py-16">
    <header class="mb-12">
      <time class="text-sm text-[var(--color-text-secondary)]">
        {post.data.pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
      <h1 class="text-4xl md:text-5xl font-bold mt-3 mb-6">
        {post.data.title}
      </h1>
      {post.data.tags.length > 0 && (
        <div class="flex gap-2">
          {post.data.tags.map((tag) => (
            <span class="text-sm px-3 py-1 bg-[var(--color-bg-secondary)] rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <footer class="mt-16 pt-8 border-t border-[var(--color-border)]">
      <a 
        href="/blog" 
        class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:underline"
      >
        ‚Üê Back to blog
      </a>
    </footer>
  </article>
</BaseLayout>
